---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tutorials">
	<h1>STEM Tutorials</h1>
	<div class="tutorials-grid">
		<!-- Placeholder for tutorials -->
		<div class="tutorial-card">
			<h2>Physics</h2>
			<ul>
				<li>Mechanics</li>
				<li>Electricity</li>
				<li>Waves</li>
				<li><a href="https://www.youtube.com/watch?v=XtMmeAjQTXc&list=PL8_xPU5epJddRABXqJ5h5G0dk-XGtA5cZ" target="_blank">The Mechanical Universe (Video Series)</a></li>
			</ul>
		</div>
		<div class="tutorial-card">
			<h2>Mathematics</h2>
			<ul>
				<li>Algebra</li>
				<li>Calculus</li>
				<li>Geometry</li>
				<li><a href="https://www.youtube.com/@3blue1brown" target="_blank">3Blue1Brown (Visual Math Explanations)</a></li>
			</ul>
		</div>
	</div>

	<style>
		h1 {
			text-align: center;
			margin: 2rem 0;
		}
		.tutorials-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			gap: 2rem;
			padding: 1rem;
		}
		.tutorial-card {
			background: var(--gray-light);
			padding: 2rem;
			border-radius: 0.5rem;
		}
		.tutorial-card ul {
			list-style-type: none;
			padding: 0;
		}
		.tutorial-card li {
			padding: 0.5rem 0;
			color: var(--gray);
		}
	</style>
</Layout>
