---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome">
	<section class="hero">
		<img src="/images/logo.png" alt="C00lnerd Logo" class="logo" />
		<h1>Welcome to C00lnerd</h1>
		<p>Your gateway to interactive STEM learning</p>
	</section>

	<section class="features">
		<div class="feature-card">
			<h2>Interactive Simulations</h2>
			<p>Explore science and math concepts through hands-on digital experiments</p>
		</div>
		<div class="feature-card">
			<h2>STEM Tutorials</h2>
			<p>Clear, comprehensive guides to help you master complex topics</p>
		</div>
		<div class="feature-card">
			<h2>Practice Problems</h2>
			<p>Test your knowledge with interactive quizzes and exercises</p>
		</div>
	</section>

	<style>
		.hero {
			text-align: center;
			padding: 4rem 1rem;
			background: linear-gradient(to right, var(--gray-light), white);
			border-radius: 0.5rem;
			margin-bottom: 2rem;
		}

		.hero .logo {
			max-width: 500px;
			width: 90%;
			height: auto;
			margin-bottom: 1.5rem;
		}

		.hero h1 {
			font-size: 3rem;
			margin: 0;
			color: var(--black);
		}

		.hero p {
			font-size: 1.5rem;
			color: var(--gray);
			margin-top: 0.5rem;
		}

		.features {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 2rem;
			padding: 1rem;
		}

		.feature-card {
			background: white;
			padding: 2rem;
			border-radius: 0.5rem;
			box-shadow: 0 2px 8px rgba(0,0,0,0.1);
			transition: transform 0.2s;
		}

		.feature-card:hover {
			transform: translateY(-4px);
		}

		.feature-card h2 {
			color: var(--accent);
			margin: 0 0 1rem 0;
		}

		.feature-card p {
			color: var(--gray);
			margin: 0;
			line-height: 1.5;
		}
	</style>
</Layout>
