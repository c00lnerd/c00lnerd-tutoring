---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Practice Problems | C00lnerd">
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8">Practice Problems</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Chemistry Section -->
            <section class="col-span-full mb-8">
                <h2 class="text-2xl font-semibold mb-4">Chemistry</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <a href="/simulations/interactive/chemistry-balancer" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
                        <h3 class="text-xl font-semibold mb-2">Chemistry Equation Balancer</h3>
                        <p class="text-gray-600">Practice balancing chemical equations with our interactive tool.</p>
                    </a>
                </div>
            </section>

            <!-- Math Section -->
            <section class="col-span-full mb-8">
                <h2 class="text-2xl font-semibold mb-4">Math Challenges</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <a href="/simulations/interactive/game-of-24-solver" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
                        <h3 class="text-xl font-semibold mb-2">Game of 24 Solver</h3>
                        <p class="text-gray-600">Test your mathematical skills with our collection of problems.</p>
                    </a>
                </div>
            </section>

            <!-- Physical Science Section -->
            <section class="col-span-full mb-8">
                <h2 class="text-2xl font-semibold mb-4">Physical Science</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <!-- Module 9 Quiz Card -->
                    <a href="/practice/module9_quiz.html" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
                        <h3 class="text-xl font-semibold mb-2">Module 9: Sound & Waves Quiz</h3>
                        <p class="text-gray-600">Test your knowledge of sound waves, frequency, wavelength, and wave speed calculations.</p>
                    </a>
                </div>
            </section>
        </div>
    </main>
</Layout>
