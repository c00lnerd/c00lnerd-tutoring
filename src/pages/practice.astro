---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Practice Problems">
	<h1>Practice Problems</h1>
	<div class="practice-grid">
		<div class="practice-card">
			<h2>Chemistry Equation Balancer</h2>
			<p>Practice balancing chemical equations with our interactive tool.</p>
			<a href="/simulations/interactive/chemistry-balancer/index.html" class="practice-link">Try It Out</a>
		</div>
		<div class="practice-card">
			<h2>Math Challenges</h2>
			<p>Test your mathematical skills with our collection of problems.</p>
			<a href="/simulations/interactive/game-of-24-solver.html" class="practice-link">Start Practicing</a>
		</div>
		<div class="practice-card">
			<h2>Physical Science Resources</h2>
			<p>Explore physics and chemistry problems with guided solutions.</p>
			<a href="/physical-science" class="practice-link">View Resources</a>
		</div>
	</div>

	<style>
		h1 {
			text-align: center;
			margin: 2rem 0;
		}
		.practice-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			gap: 2rem;
			padding: 1rem;
		}
		.practice-card {
			background: var(--gray-light);
			padding: 2rem;
			border-radius: 0.5rem;
			text-align: center;
		}
		.practice-card h2 {
			color: var(--accent);
			margin: 0 0 1rem 0;
		}
		.practice-card p {
			color: var(--gray);
			margin: 0 0 1.5rem 0;
			line-height: 1.5;
		}
		.practice-link {
			display: inline-block;
			background: var(--accent);
			color: white;
			padding: 0.5rem 1.5rem;
			border-radius: 0.25rem;
			text-decoration: none;
			transition: background-color 0.2s;
		}
		.practice-link:hover {
			background: var(--accent-dark);
		}
	</style>
</Layout>
