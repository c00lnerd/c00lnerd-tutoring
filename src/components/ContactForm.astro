<div class="contact-section">
  <p class="contact-intro">Get in touch to discuss tutoring:</p>
  <p class="email-display">
    <span class="email-text">chuck@c00lnerd.com</span>
  </p>
  <div class="button-group">
    <button class="contact-button" id="copy-button">Copy Email Address</button>
  </div>
  <p class="copy-message" id="copy-message" style="display: none;">Email address copied! You can now paste it into your email client.</p>
  <p class="note">(First-time emails may appear in your spam folder)</p>
</div>

<script>
  const copyButton = document.getElementById('copy-button');
  const copyMessage = document.getElementById('copy-message');

  copyButton?.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText('chuck@c00lnerd.com');
      if (copyMessage) {
        copyMessage.style.display = 'block';
        setTimeout(() => {
          copyMessage.style.display = 'none';
        }, 2000);
      }
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  });
</script>

<style>
  .contact-section {
    max-width: 500px;
    margin: 0 auto;
    text-align: center;
    padding: 2rem;
    background: var(--gray-light);
    border-radius: 1rem;
  }

  .contact-intro {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--gray-dark);
  }

  .email-display {
    font-size: 1.4rem;
    margin: 1rem 0;
    font-weight: bold;
  }

  .email-text {
    color: var(--accent);
  }

  .contact-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--accent);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .contact-button:hover {
    background: var(--accent-dark);
  }

  .note {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--gray);
  }

  .copy-message {
    margin-top: 0.5rem;
    color: var(--accent);
    font-weight: bold;
  }
</style>
